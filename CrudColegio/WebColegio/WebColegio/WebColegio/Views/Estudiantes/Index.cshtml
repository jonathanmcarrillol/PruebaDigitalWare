@model List<Entity.EstudiantesEntity>
@{
    ViewBag.Title = "Estudiantes";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">


        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th> @item.EstudianteId</th>
                    <th> @item.EstudianteNombre</th>
                    <th> <a class="btn btn-secondary" href="~/Estudiantes/Editar/@item.EstudianteId"> Editar Materias </a></th>
                    <th> <a class="btn btn-success" href="~/Estudiantes/Nuevo/@item.EstudianteId"> Nueva Materia</a></th>

                </tr>
                }
            </tbody>
        </table>
    </div>

